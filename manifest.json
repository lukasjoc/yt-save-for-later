{
	"manifest_version": 2,
	"name": "yt-save-for-later",
	"description": "Save a yt video for later. Resume where you left off",
	"version": "0.1.0",
	"icons": {
		"16":  "assets/icon16.png",
		"32":  "assets/icon32.png",
		"48":  "assets/icon48.png",
		"96":  "assets/icon96.png",
		"128": "assets/icon128.png"		
	},
	"content_scripts": [
		{
			"matches": ["*://*.youtube.com/*"],
			"js": ["main.js"]
		}
	],

	"browser_action": {
		"default_popup": "index.html",
		"default_icon": {
			"19": "assets/icon19.png",
			"38": "assets/icon38.png"
		}
	}
}

