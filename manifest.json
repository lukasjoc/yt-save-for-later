{
	"manifest_version": 2,
	"name": "yt-save-for-later",
	"description": "Saves the state of any youtube video and brings you back to the video where your left off",
	"version": "0.1.0",
	"icons": {
		"16":  "assets/icon16.png",
  	"32":  "assets/icon32.png",
  	"48":  "assets/icon48.png",
  	"96":  "assets/icon96.png",
  	"128": "assets/icon128.png"		
	},
	
	"content_scripts": [
		{
			"matches": ["*://*.youtube.com/*"],
			"js": ["content.js"]
		}
	],

	"browser_action": {
		"default_title": "yt-save-for-later",
  	"default_popup": "popup.html",
		"default_icon": {
			"19": "assets/icon19.png",
			"38": "assets/icon38.png"
		}
	}
}

