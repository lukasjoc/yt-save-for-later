{
  "manifest_version": 2,
  "name": "yt-save-for-later",
  "description": "Save a yt video for later. Resume where you left off",
  "version": "0.2",
  "permissions": ["tabs", "declarativeContent"],
  "content_scripts": [
    {
      "document_idle": true,
      "matches": ["<all_urls>"],
      "js": ["./src/content.js"]
    }
  ],
  "browser_action": {
    "default_title": "yt-save-for-later",
    "default_popup": "./src/index.html",
    "default_icon": {
      "16": "./icons/icon16.png",
      "32": "./icons/icon32.png",
      "48": "./icons/icon48.png",
      "96": "./icons/icon96.png",
      "128": "./icons/icon128.png"
    }
  },
  "icons": {
    "16": "./icons/icon16.png",
    "32": "./icons/icon32.png",
    "48": "./icons/icon48.png",
    "96": "./icons/icon96.png",
            "128": "./icons/icon128.png"
  }
}
